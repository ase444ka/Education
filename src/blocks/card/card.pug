include ./card_for_room-choice
include ./card_for_price-calc
include ./card_for_registration
include ./card_for_login
include ./card_for_room-preview
mixin card(type, options)
    -let modificator = "card_for_" + type
    .card(class = modificator)
        case type
            when "room-choice"
                +card_for_room-choice(options)
            when "price-calc"
                +card_for_price-calc(options)
            when "registration"
                +card_for_registration(options)
            when "login"
                +card_for_login(options)
            when "room-preview"
                +card_for_room-preview(options)