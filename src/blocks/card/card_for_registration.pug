mixin card_for_registration(options)
        .card__header=options.header||"Регистрация аккаунта"
        .card__input
            +input({placeholder: "Имя"})
        .card__input
            +input({placeholder: "Фамилия"})
        .card__radio
            +radio({name:"gender", checked:"female"},
            {valueVar:"male", valueName:"мужчина"},{valueVar:"female", valueName:"женщина"})   
        .card__input-name Дата рождения
        .card__input
            +input({placeholder: "ДД.ММ.ГГ", mask: "99.99.9999"})
        .card__input-name Данные для входа в сервис
        .card__input
            +input({placeholder: "Email"})
        .card__input
            +input({placeholder: "Пароль"})       
        .card__offers-setter
            +toggle("receiveOffers","Получать спецпредложения")
        .card__button
            +button({type: "active", color: "purple", text: "перейти к оплате", target: "message"})
        .card__account-existance-check
            .card__account-existance-check__text Уже есть аккаунт на Toxin
            .card__account-existance-check__button 
                +button({text: "войти", color: "white", target: "login"})