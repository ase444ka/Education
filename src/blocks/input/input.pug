mixin input(data)
    - let hovered = data.hovered? "input_hovered ":""
    - let material = ""
    - let type = ""
    - if (data.sending) material = "arrow_forward"
        - type = " input_sending"
    -let masked = ""
    -if (data.mask)
        - let attributes = {};
        - attributes['data-mask'] = mask;
        - masked = "input_masked"


    -let classes = type + hovered

    div.input(class= classes, data-target = target)&attributes(attributes)
        if (data.sending)
            i.material-icons.input__i=material
        input(placeholder=data.placeholder, class= masked )&attributes(attributes)
