mixin input(data)
    - let hovered = data.hovered? " input_hovered ":""
    - let material = ""
    - let type = ""
    - if (data.sending) 
        - material = "arrow_forward"
        - type = " input_sending"
    -let masked = ""
    - let attr = {};
    -if (data.mask)
        - attr = {"data-inputmask": `'mask': '${data.mask}', 'placeholder': '${data.placeholder}'`};
        - masked = " input_masked"


    -let classes = "input" + type + hovered + masked

    if (data.sending)
        .input__wrapper
            input(placeholder=data.placeholder, class= classes, spellcheck= "false" )&attributes(attr)
            i.material-icons.input__i=material
    else
        input(placeholder=data.placeholder, class= classes, spellcheck= "false" )&attributes(attr)
        
        