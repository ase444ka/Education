section#forms
    include ../../../blocks/field/field
    include ../../../blocks/input/input
    include ../../../blocks/fieldset/fieldset
    include ../../../blocks/range-slider/range-slider
    include ../../../blocks/checkbox/checkbox      
    include ../../../blocks/expandable/expandable 
    include ../../../blocks/radio/radio     
    include ../../../blocks/toggle/toggle     
    include ../../../blocks/like/like     
    include ../../../blocks/rate/rate     
    include ../../../blocks/button/button     
    include ../../../blocks/pagination/pagination     
    include ../../../blocks/bullet-list/bullet-list
    include ../../../blocks/feature/feature
    include ../../../blocks/feedback/feedback
    include ../../../blocks/date-diapazon/date-diapazon
    include ../../../blocks/dropdown/dropdown
    
    +field({name:"text field", annotation:"default"})
        +input({placeholder: "Email"})
    +field({name: "text field", annotation: "hover / focus"})
        +input({placeholder: "This is pretty awesome", hovered: true})
    +field({name: "dropdown", annotation: "default"})
        +dropdown({placeholder: "Сколько гостей"})
    +field({name: "dropdown", annotation: "default"})
            +dropdown({placeholder: "Сколько гостей"})
    +field({name: "masked text field", annotation: "default"})
        +input({placeholder: "ДД.ММ.ГГГГ"})
    +fieldset
        +field({name: "date dropdoun"})
             
    +field({name: "filter date dropdown", shorted: true})
        +input({placeholder: "19авг - 23авг"})
    +date-diapazon("date-dropdown","date-dropdown")
    +field({name: "subscription text field"})
        +input({placeholder: "Email", sending: true})
    



    +field({name: "checkbox buttons"})
        +checkbox({value:"Можно курить", nameVar: "smoke-permission"})
        +checkbox({value:"Можно с питомцами", nameVar: "pets-permission"})
        +checkbox({value:"Можно пригласить гостей (до 10 человек)", nameVar: "guests-permission"})      
    +field({name: "radio buttons"})
        +radio({name:"gender", checked:"female"},
            {valueVar:"male", valueName:"мужчина"},{valueVar:"female", valueName:"женщина"})   
    +field({name: "toggle"})
        +toggle("offences","Получать спецпредложения",true)
        +toggle("offences","Получать спецпредложения")
    +field({name: "like button"})
        +like()
        +like(12)
    +field({name: "rate button"})
        +rate({stars:4})
        +rate({stars:1, ratable: true})
    
    
    
    +field({name: "range slider", annotation: "5000р - 10000р"}) 
        +range-slider
            //- div.range_slider-range 5000 &#8381; - 10000 &#8381;
    +field({name:"buttons"})
        div(class="form__buttons")
            +button({color: "purple"})
            +button({color: "purple", theme: "transparent"})
            +button({color: "white"})
            +button({color: "white", theme: "transparent"})
            +button({theme: "simple", color: "purple"})
            +button({theme: "simple", color: "darkShade"})
            +button({type: "active", color: "purple", text: "перейти к оплате"})
    +field({name:"pagination"})
        +pagination({})
    
    
    
    +field({name: "dropdown", annotation: "default", shorted: true})
        +dropdown({placeholder: "2 спальни, 2 кровати..."})
    +field({name: "dropdown", annotation: "default", shorted: true})
        +dropdown({placeholder: "2 спальни, 2 кровати...", expanded: true, apply: true, clear: true},
            {name: 'спальни', value: 2},{name: 'кровати', value: 2},{name: 'ванные комнаты', value: 0})
    +field({name: "dropdown"})
        +dropdown({placeholder: "сколько гостей", expanded: true, clear: true, apply: true},
            {name: 'взрослые', value: 2},{name: 'дети', value: 2},{name: 'младенцы', value: 0})
    +field({name: "dropdown"})
        +dropdown({placeholder: "сколько гостей", expanded: true, clear: true, apply: true},
            {name: 'взрослые', value: 2},{name: 'дети', value: 2},{name: 'младенцы', value: 0})


    +field({name:"expandable checkbox list"}) 
        +expandable()
            +checkbox({value: "завтрак", nameVar: "breakfast"})
            +checkbox({value: "письменный стол", nameVar: "breakfast"})
            +checkbox({value: "завтрак", nameVar: "breakfast"})
            +checkbox({value: "стул для кормления", nameVar: "feedingChair"})
            +checkbox({value: "кроватка", nameVar: "cot", checked: true})
            +checkbox({value: "телевизор", nameVar: "TV"})
            +checkbox({value: "шампунь", nameVar: "shampoo", checked: true})
            +checkbox({value: "тапочки", nameVar: "slippers"})
    +field({name:"expandable checkbox list"}) 
        +expandable(true)
            +checkbox({value: "завтрак", nameVar: "breakfast"})
            +checkbox({value: "письменный стол", nameVar: "breakfast"})
            +checkbox({value: "завтрак", nameVar: "breakfast"})
            +checkbox({value: "стул для кормления", nameVar: "feedingChair"})
            +checkbox({value: "кроватка", nameVar: "cot"})
            +checkbox({value: "телевизор", nameVar: "TV"})
            +checkbox({value: "шампунь", nameVar: "shampoo"})
            +checkbox({value: "тапочки", nameVar: "slippers"})
    
    
    +field({name: "rich checkbox buttons"})
        +checkbox({value: "Широкий коридор", nameVar: "wide_corridor_sample", description: "Ширина коридоров в номере не менее 91 см."})
        +checkbox({value: "Помощник для инвалидов", nameVar: "assistant_sample", description: "На 1 этаже вас встретит специалист  и проводит до номера."})
    
    +field({name: "bullet list"})
        +bullet-list("Нельзя с питомцами","Без вечеринок и мероприятий","Время прибытия — после 13:00, а выезд до 12:00")
    
    +field({})
        +feature("Комфорт","Шумопоглощающие стены","insert_emoticon")
        +feature("Удобство","Окно в каждой из спален","location_city")
    
    
    
    .span2
        +feedback({ava: "murad", name: "Мурад Сарафанов", likes: 12, time: "5 дней назад", 
        feed: 
                `Великолепный матрас на кровати в основной спальне!
            А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие.
            Выкрикивал комплименты повару — никто не жаловался из соседей.`})


